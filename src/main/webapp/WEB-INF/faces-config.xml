<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<resource-bundle>
			<base-name>com.wolfsoft.hr.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<locale-config>
            <default-locale>en_UK</default-locale>
            <supported-locale>en_UK</supported-locale>
            <supported-locale>es_ES</supported-locale>
        </locale-config>
	</application>
	<factory>
        <exception-handler-factory>com.wolfsoft.hr.util.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
    </factory>	
</faces-config>
